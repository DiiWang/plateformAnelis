                                                                    <a href="{{ user.socialLinkedin }}" class="btn btn-xs" target="_blank"><i class="fa fa-linkedin"></i></a>
                                                                    {% else %}
                                                                    <a data-toggle="modal" href="#cotisationNeeded" class="btn btn-xs" target="_blank"><i class="fa fa-linkedin"></i></a>
                                                                {% endif %}
                                                            {% endif %}
                                                        </td>
                                                    </tr>
