{% extends "::application.html.twig" %} 

{% block title %}Mes cotisations{% endblock %}
{% for form in forms %}
    {% form_theme form '@ApplicationCotisation/Form/fields.html.twig' %}
{% endfor %}

{% for form in paypalForms %}
    {% form_theme form '@ApplicationCotisation/Form/fieldsJMSPayment.html.twig' %}
{% endfor %}


  {% block stylesheets %}
      {{ parent() }}

    <link href="{{ asset('assets/css/cotisation.css') }}" type="text/css" rel="stylesheet" />
  {% endblock %}

  {% block body %}
    <div id="page-content">
      <div id='wrap'>
        <div id="page-heading">
          <ol class="breadcrumb">
            <li><a href="{{ path('application_main_homepage') }}">Plateforme</a></li>
            <li class="active">Cotisations</li>
          </ol>
        </div>

        <div class="container">
          <div class="jumbotron ">
              {{ staticText  | raw}}
          </div>
          <h1>Mes cotisations</h1>
          <div class="row">
                {% if (cotisDispo | length > 0) or (cotisAttente | length > 0) or (cotisOK | length > 0)%}
                    {% set i = 0 %}
                    {% if cotisDispo | length > 0 %}
                      <h3>Cotisations ouvertes</h3>
                    {% endif %}
                    {% for dateDispo in cotisDispo %}
                      <div class="col-xs-6">
                        <div class="panel panel-orange">
                          <div class="panel-heading">
                            <h4>Cotisation {{ dateDispo }}</h4>
                          </div>
                          <div class="panel-body">
                            <p class="text-info">La cotisation pour l'année {{ dateDispo }} est ouverte ! Vous pouvez cotiser dès maintenant pour profiter aux plus vite des avantages !</p>
                            <div class="col-xs-offset-2 col-xs-8 formCotisation">
                                {{ form_start(forms[i]) }}
                              <div class="form-group">
                              {{ form_label(forms[i].priceCotisation, "Montant de ma cotisation")}}
                                {{ form_widget(forms[i].priceCotisation) }}

                                <div class="ou">
                                  OU
                                </div>

                                <div class="formCotisationLibre">
                                    {{ form_label(forms[i].cotisationLibre)}}
                                    {{ form_widget(forms[i].cotisationLibre) }}
                                </div>
                              </div>
                                {% set j = 0 %}
                                {% for error in showAmountError if showAmountError[j] != dateDispo %}
                                    {% set j = j + 1 %}
                                {% endfor %}
                                {% if j < showAmountError | length %}
                                  <div class="bg-danger"> Le champ Cotisation Libre est mal renseigné. Le montant
                                    minimum de la cotisation {{ dateDispo }} est de 15
                                    € minimum.</div>
                                {% endif %}
                                <div class="form-group col-xs-offset-4 ">
                                  {{ form_errors(forms[i]) }}
                                  {{ form_rest(forms[i]) }}
                                </div>
                                {{ form_end(forms[i]) }}
                          </div>
                        </div>
                      </div>
                      </div>
                      {% set i = i + 1 %}
                        {%  if i%2==0 %}
                          <div class="col-xs-12"> </div>
                      {%  endif %}
                    {% endfor %}
                    {% if cotisAttente | length > 0 %}
                      <h3>Cotisations en attente de paiement</h3>
                    {% endif %}
                    {% for dateAttente in cotisAttente %}
                        <div class="col-xs-6">
                          <div class="panel panel-orange">
                            <div class="panel-heading">
                              <h4>Cotisation {{ dateAttente.getYearCotisation.getYear }}</h4>
                            </div>
                            <div class="panel-body">
                              <p class="text-info"> Votre cotisation {{ dateAttente.getYearCotisation.getYear }} d'un
                                montant de {{ dateAttente.priceCotisation }} € est
                                en attente de validation
                                <br/>
                                  {{ cotisText | raw }}
                              <div class="col-xs-offset-4">
                                  {{ form_start(paypalForms[dateAttente.getYearCotisation.getYear]) }}
                                  {{ form_widget(paypalForms[dateAttente.getYearCotisation.getYear]) }}
                                <input type="image" src="https://www.paypalobjects.com/webstatic/en_US/i/btn/png/gold-rect-paypal-44px.png" border="0" name="submit" alt="PayPal, le réflexe sécurité pour payer en ligne">
                                  {{ form_end(paypalForms[dateAttente.getYearCotisation.getYear]) }}
                              </div>
                            </div>
                          </div>
                        </div>
                        {% set i = i + 1 %}
                        {%  if i%2==0 %}
                          <div class="col-xs-12"> </div>
                        {%  endif %}
                    {% endfor %}
                    {% if cotisOK | length > 0 %}
                      <h3>Cotisations payées</h3>
                    {% endif %}
                    {% for dateOK in cotisOK %}
                      <div class="col-xs-6">
                        <div class="panel panel-midnightblue">
                          <div class="panel-heading">
                            <h4>Cotisation {{ dateOK }}</h4>
                          </div>
                          <div class="panel-body">
                            <p class="text-info">Vous avez déjà cotisé pour l'année {{ dateOK }}, merci de votre aide !</p>
                          </div>
                        </div>
                      </div>
                        {% set i = i + 1 %}
                        {%  if i%2==0 %}
                          <div class="col-xs-12"> </div>
                        {%  endif %}
                    {% endfor %}
                {% else %}
                  <p class="text-danger">Aucune cotisation n'est active et il n'est pas possible de cotiser actuellement.</p>
                {% endif %}
          </div>
        </div>

        <div class="container">
          <h1>Historique</h1>
          <div class="row">
            <div class="col-xs-12">
              <div class="panel panel-midnightblue">
                <div class="panel-heading">
                  <h4>Historique des cotisations</h4>
                  <div class="options">

                  </div>
                </div>
                <div class="panel-body">
                    {% if app.user.cotisations|length > 0 %}
                      <table class="table">
                        <thead>
                        <tr>
                          <th>#</th>
                          <th>Année</th>
                          <th>Prix</th>
                          <th>Statut</th>
                          <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set cotisationNumbers = 1 %}
                        {% for cotisation in app.user.cotisations|reverse %}

                          <tr>
                            <td>{{ cotisationNumbers }}</td>
                            <td>{{ cotisation.yearCotisation.year }}</td>
                            <td>{{ cotisation.priceCotisation }} €</td>
                            <td>{% if cotisation.payed %}<button class="btn btn-success">Payé</button>{% else %}<button class="btn btn-danger">En attente de paiement</button>{% endif %}</td>
                            <td>{% if not cotisation.payed %}
                                <a href="{{ path("application_cotisation_delete", { "id" : cotisation.id }) }}"><span class="glyphicon glyphicon-trash"></span></a>
                                {% endif %}</td>
                          </tr>
                            {% set cotisationNumbers = cotisationNumbers + 1 %}
                        {% endfor %}
                        </tbody>
                      </table>
                    {% else %}
                      <p class="text-danger"><strong>Aucune cotisation n'a été trouvé pour votre compte. N'hésitez pas à effectuer une demande de cotisation.</strong></p>
                    {% endif %}


                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  {% endblock %}