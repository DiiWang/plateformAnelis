{% extends "::application.html.twig" %} 

{% block title %}Mes cotisations{% endblock %}

  {% block body %}
    <div id="page-content">
      <div id='wrap'>
        <div id="page-heading">
          <ol class="breadcrumb">
            <li><a href="{{ path('application_main_homepage') }}">Plateforme</a></li>
            <li class="active">Cotisations</li>
          </ol>
        </div>
        <div class="container">
          <h1>Mes cotisations</h1>
          <div class="row">
            <div class="pannel-group">
              <div class="col-xs-6">
                <div class="panel panel-orange">
                  <div class="panel-heading">
                    <h4>Cotisation 2017</h4>
                  </div>
                  <div class="panel-body">
                    <p class="text-info">La cotisation 2017 est ouverte ! L'argent récolté nous permet de faire <strong>vivre l'association</strong> et d'<strong>organiser des événements</strong> comme les récrées ANELIS.</p>
                    <p class="text-center"><a href="{{ path('application_cotisation_new') }}" title="Nouvelle cotisation"><button class="btn-default btn">Cotiser</button></a></p>
                  </div>
                </div>
              </div>
              <div class="col-xs-6">
                <div class="panel panel-midnightblue">
                  <div class="panel-heading">
                    <h4>Cotisation 2016</h4>
                  </div>
                  <div class="panel-body">
                    <p class="text-info">Vous avez cotisé pour 2016, merci de votre aide !</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="container">
          <h1>Historique</h1>
          <div class="row">
            <div class="col-xs-12">
              <div class="panel panel-midnightblue">
                <div class="panel-heading">
                  <h4>Historique des cotisations</h4>
                  <div class="options">

                  </div>
                </div>
                <div class="panel-body">
                    {% if app.user.cotisations|length > 0 %}
                      <table class="table">
                        <thead>
                        <tr>
                          <th>#</th>
                          <th>Année</th>
                          <th>Type</th>
                          <th>Prix</th>
                          <th>Statut</th>
                          <th>Facture</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set cotisationNumbers = 1 %}
                        {% for cotisation in app.user.cotisations|reverse %}

                          <tr>
                            <td>{{ cotisationNumbers }}</td>
                            <td>{{ cotisation.year|date("Y") }}</td>
                            <td>{{ cotisation.typeCotisation.name }}</td>
                            <td>{{ cotisation.priceCotisation }} €</td>
                            <td>{% if cotisation.invoice.payed %}<button class="btn btn-success">Payé</button>{% else %}<button class="btn btn-danger">En attente de paiement</button>{% endif %}</td>
                            <td><a href="{{ path("application_cotisation_invoice_get", { "id" : cotisation.invoice.id }) }}"><i class="fa fa-eye"></i></a>    {% if not cotisation.invoice.payed %}
                                <a href="{{ path("application_cotisation_delete", { "id" : cotisation.id }) }}"><span class="glyphicon glyphicon-trash"></span></i></a>
                                {% endif %}</td>
                          </tr>
                            {% set cotisationNumbers = cotisationNumbers + 1 %}
                        {% endfor %}
                        </tbody>
                      </table>
                    {% else %}
                      <p class="text-danger"><strong>Aucune cotisation n'a été trouvé pour votre compte. N'hésitez pas à effectuer une demande de cotisation.</strong></p>
                    {% endif %}


                </div>
              </div>
            </div>
          </div>




        </div>
      </div>
    </div>
    </div>

  {% endblock %}