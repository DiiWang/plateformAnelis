{% extends "::application.html.twig" %} 

{% block title %}Nouveau parcours{% endblock %}
{% block body %}

    <div id="page-content">
      <div id='wrap'>
        <div id="page-heading">
          <ol class="breadcrumb">
            <li><a href="{{ path('application_main_homepage') }}">Plateforme</a></li>
            <li><a href="{{ path('application_career_homepage') }}" title="Parcours">Parcours</a></li>
            <li class="active">Nouveau</li>
        </ol>
        <h1>Nouveau Parcours</h1>
    </div>
    <div class="container">

        <div class="panel panel-midnightblue">
            <div class="panel-heading">
              <h4>Nouveau Parcours</h4>
          </div>
          <div class="panel-body collapse in">
            <form class="form-horizontal" method="post" {{ form_enctype(form) }}>
                <div class="form-group">
                    {{ form_label(form.typeCareer, "Type*", { 'label_attr' : { 'class' : 'col-sm-3 control-label' } }) }}
                    <div class="col-sm-6">
                        {{ form_widget(form.typeCareer, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.date, "Date*", { 'label_attr' : { 'class' : 'col-sm-3 control-label' } }) }}
                    <div class="col-sm-6">
                        {{ form_widget(form.date, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.title, "Titre*", { 'label_attr' : { 'class' : 'col-sm-3 control-label' } }) }}
                    <div class="col-sm-6">
                        {{ form_widget(form.title, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.description, "Description*", { 'label_attr' : { 'class' : 'col-sm-3 control-label' } }) }}
                    <div class="col-sm-6">
                        {{ form_widget(form.description, { 'attr' : { 'class' : 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_errors(form) }}
                    {{ form_rest(form) }}

                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="text-center">
                            <div class="btn-toolbar">
                                <button class="btn-primary btn">Ajouter</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
<!--wrap -->
</div>
<!-- page-content -->
<script>
        global = {
            locale   : '{{ app.request.locale }}'
        }
</script>


{% endblock %}